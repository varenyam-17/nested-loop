#include<iostream>
using namespace std;
int main()
{
    int k=1;
    int n;
    
    cout<<"Enter the number:"<<endl;
    cin>>n;
    for(int i=1;i<n;i++)
    {
        for(int k=1;k<=n-i;k++)
        {
            cout<<"  ";
        }    
        
       for(int j=1;j<=i;j++)
       {
           cout<<k<<" " ;
           k++;
       }
       cout<<endl;
    }   
}
