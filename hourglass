#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"Enter the number of stars:"<<endl;
    cin>>n;
    for(int i=1;i<=n;i++)
    {
        for(int k=n;k<n+i;k++)
        {
            cout<<" ";
        }    
        
        for(int j=n-i+1;j>0;j--)
       {
           cout<<" *";
       }
        
       cout<<endl;
        
    }  
    for(int i=1;i<=n;i++)
    {
        for(int k=1;k<n+2-i;k++)
        {
            cout<<" ";
        }    
        
        for(int j=1;j<=i;j++)
       {
           cout<<" *";
       }
        
       cout<<endl;
        
    }   
}
   
   
